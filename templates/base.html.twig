<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title> 
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% endblock %}
    {% block javascripts %}
      <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
  </head>
  <body class="flex flex-col h-screen">

  <header class="bg-dark-orange">
  
    <nav class="grid grid-cols-8 p-2 lg:pb-0 text-dark-red">
      <div class="col-start-1 col-end-9 m-auto lg:col-end-3  lg:pb-2">
        <img class="h-20 w-auto" src="/img/logo1.png" alt="Logo Flamboyant Créa"/>
      </div>
      <input id="navbar_trigger" class="h-6 w-6 col-start-1 col-end-2 lg:hidden" type="image" src="/img/menu.png" alt="menu">
      </input>
      <div id="navbar" class="hidden col-start-2 col-end-7 lg:col-start-3 lg:col-end-7 lg:flex flex-col lg:flex-row lg:items-end font-display font-semibold text-xl lg:text-2xl">
        <a href="{{ path('index') }}" class="hover:text-light-beige lg:p-3 lg:hover:bg-dark-red lg:hover:text-light-beige">Accueil</a>
        <a href="{{ path('category', {'category_name': 'couture'}) }}" class="hover:text-light-beige lg:p-3 lg:hover:bg-dark-red lg:hover:text-light-beige">Couture</a>
        <a href="{{ path('category', {'category_name': 'peinture'}) }}" class="hover:text-light-beige lg:p-3 lg:hover:bg-dark-red lg:hover:text-light-beige">Peinture</a>
        <a href="{{ path('category', {'category_name': 'tricot'}) }}" class="hover:text-light-beige lg:p-3 lg:hover:bg-dark-red lg:hover:text-light-beige">Tricot & Broderie</a>
      </div>
      <div class="col-start-7 lg:font-display lg:font-semibold lg:self-end lg:pb-3 lg:text-lg lg:hover:text-light-beige">
        <a href="{{ path('cart') }}" class="lg:flex lg:flex-row">
          <img class="h-6 w-6" src="/img/panier.png" alt="Panier"/>
          <p class="hidden lg:pl-2 lg:block">Mon panier</p>
        </a>
      </div>
      <div class="lg:font-display lg:font-semibold lg:self-end lg:pb-3 lg:text-lg lg:hover:text-light-beige">
        <a href="#" class="lg:flex lg:flex-row">
          <img class="h-6 w-6" src="/img/compte.png" alt="Compte"/>
          <p class="hidden lg:pl-2 lg:block">Mon compte</p>
        </a>
      </div>  
    </nav>

  </header>

  <main class="flex-grow">
    {% block body %}{% endblock %}
  </main>

  <footer class="grid grid-cols-5 leading-loose bg-dark-blue text-dark-red font-body font-semibold text-xs lg:text-sm bfixed p-2 lg:pl-10">
    
    <div class="col-start-1 col-end-3">
      <h1 class="font-display font-bold text-lg lg:text-xl">Service client</h1>
      <p>02 40 88 88 88</p>
      <p>de 9h00 à 17h00</p>
      <p>du lundi au samedi</p>
    </div>

    <div class="col-start-3 col-end-6 flex flex-col lg:grid lg:grid-cols-2 lg:pt-2">
      <div class="lg:grid lg:grid-rows-2">
        <a href="#" class="pt-1 no-underline hover:underline">Formulaire de contact</a>
        <a href="#" class="pt-1 no-underline hover:underline">Mentions légales</a>
      </div>
      <div class="lg:grid lg:grid-rows-2">
        <a href="#" class="pt-1 no-underline hover:underline">Conditions Générales de Vente</a>
        <a href="#" class="pt-1 no-underline hover:underline">Données personnelles</a>
      </div>
    </div>

  </footer>

  </body>
</html>
