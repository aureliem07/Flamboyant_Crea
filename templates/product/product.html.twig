{% extends 'base.html.twig' %}

{% block title %}
  {{ produit.nom }}  
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
<div class="grid">

<article class="m-8 overflow-hidden rounded-lg shadow-lg lg:grid lg:grid-cols-3 lg:h-96 lg:mx-20 lg:my-10">
  
  <img alt="Placeholder" class="object-cover h-48 w-full lg:h-full" src="{{ produit.imageUrl }}">
  
  <div class="pb-2 font-body text-base lg:col-start-2 lg:col-end-4 lg:px-8">
    <div class="p-2 lg:p-4 lg:pr-20">
      <h1 class="leading-none pt-3 text-lg lg:text-2xl lg:pt-0 text-dark-orange font-bold">{{ produit.nom }}</h1>
      {% if produit.stock > 5 %}
        <p class="text-green-700 font-bold">En stock</p>
      {% elseif produit.stock > 0 %}
        <p class="text-red-600 font-bold">{{ produit.stock }} en stock</p>
      {% else %}
        <p class="text-red-600 font-bold">En rupture de stock</p>
      {% endif %}
      <p class="text-base pt-2 lg:pt-6 whitespace-pre-line">{{produit.description}}</p>
    </div>
    <div class="grid grid-cols-3 px-2 lg:pl-4 lg:pt-10 lg:gap-14">
      <p class="col-start-1 col-end-3 text-grey-darker lg:text-xl">{{ produit.prixUnitaire }} â‚¬</p>
      <button type="button" href="{{ path('cart_add', {'id': produit.id })}}"class="focus:outline-none h-8 w-20 lg:h-12 lg:w-28 text-dark-red font-bold text-base rounded-md bg-gradient-to-r from-dark-blue to-light-blue transform hover:scale-110 lg:text-xl">Panier</button>
    </div>
  </div>
</article>
</div>
{% endblock %}
