{% extends 'base.html.twig' %}
{% block title %}
  Inscription  
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}

<div class="flex items-center justify-center font-body m-8">
  <div class="w-full max-w-md bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4">
    <form action="{{ path('security_login') }}" method="post" class="">
      <div class="text-dark-orange text-xl font-bold flex justify-center border-b-2 py-2 mb-4 text-center">
        Vous avez déjà un compte
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm mb-2"
          for="username"
        >
          Adresse e-mail *
        </label>
        <input
          placeholder="Adresse e-mail"
          required name="_username"
          type="text" 
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <div class="mb-6">
        <label
          class="block text-gray-700 text-sm mb-2"
          for="password"
        >
          Mot de passe *
        </label>
        <input 
          placeholder="Mot de passe"
          required name="_password"
          type="password"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <p class="text-gray-600 text-xs mb-2 text-center">*Champs obligatoires</p>
      <div class="flex items-center justify-between">
        <button
          class="m-auto px-4 py-2 rounded text-dark-red font-bold inline-block shadow-lg bg-light-blue hover:bg-blue-400 transform hover:scale-110"
          type="submit"
        >
          Se connecter
        </button>
        {# <a
          class="inline-block align-baseline font-normal text-sm text-blue-500 hover:text-blue-800"
          href="#"
        >
          Forgot Password?
        </a> #}
      </div>
      <div class="mt-8 text-dark-orange text-xl font-bold flex justify-center border-b-2 py-2 mb-4 text-center">
        Vous n'avez pas encore de compte
      </div>
    </form>
    <div class="flex items-center justify-between">
      <a href="{{ path('security_registration') }}" class="m-auto">
        <button
          class="px-4 py-2 rounded text-dark-red font-bold inline-block shadow-lg bg-light-blue hover:bg-blue-400 transform hover:scale-110"
          type="button"
        >
          Créer un compte
        </button>
      </a>
    </div>
  </div>
</div>

{% endblock %}