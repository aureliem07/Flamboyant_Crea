{% extends 'base.html.twig' %}
{% block title %}
  Données personnelles
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}

<div class="flex items-center justify-center font-body m-8">
  <div class="w-full max-w-md lg:max-w-3xl bg-white shadow-lg rounded px-6 lg:px-12 pt-6 pb-8 mb-4">
    <div class="text-dark-orange text-xl font-bold flex justify-center border-b-2 py-2 mb-4 lg:mb-8 text-center">
        Mes données personnelles
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Nom :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.nom }}
      </p>
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Prénom :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.prenom }}
      </p>
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Adresse :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.adresse }}
      </p>
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Code Postal :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.codePostal }}
      </p>
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Ville :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.ville }}
      </p>
    </div>
    <div class="mb-4 lg:mb-8 lg:flex lg:flex-row lg:justify-between lg:px-10">
      <p class="block text-gray-700 text-sm lg:text-base lg:self-center mb-2 lg:mb-0">
        Téléphone :
      </p>
      <p class="shadow appearance-none border border-light-orange rounded w-full lg:max-w-sm py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
          {{ app.user.tel }}
      </p>
    </div>
  
    <div class="flex items-center justify-between mt-8">
      {# <a href="#" class="m-auto">
        <button
          class="m-auto px-4 py-2 rounded text-dark-red font-bold inline-block shadow-lg bg-light-blue hover:bg-blue-400 transform hover:scale-110"
          type="button"
        >
          Modifier
        </button>
      </a> #}
      {# <a href="{{ path('security_remove') }}" class="m-auto">
